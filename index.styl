@import url('https://fonts.googleapis.com/css?family=Saira+Extra+Condensed|Varela+Round')

@import vars
@import basic

html,body
  width: 100%
  height: 100%
  margin: 0
  padding: 0
  font-family: 'Varela Round', arial, sans-serif

.saira
  font-family: 'Saira Extra Condensed', arial, sans-serif

.icons
  flexbox()
  flex-wrap(wrap)
  cursor: pointer
.icon
  width: 100px
  height: 140px
  margin: 10px
  flex(1 1 32px)
  border-radius: 5px
  background-color: #eee
  .img
    width: 100px
    height: 100px
    margin: auto
    background-position: center center
    background-size: 130%
  .name
    margin-top: 3px
    text-align: center
    font-size: 12px
    color: #777
  .en
    text-align: center
    font-size: 12px
    transform: scale(0.75)
    color: #999
    margin-top: -5px
.block800
  width: 95%
  max-width: 800px
  margin: auto

#heading
  background: #000
  color: #fff
  a
    color: #f00
  border-bottom: 1px solid #444
